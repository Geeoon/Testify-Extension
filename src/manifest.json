{
    "manifest_version": 2,
    
    "name": "Testify",
    "version": "1.0",
    "description": "Prepare for tests, the easy way!",

    "permissions": [
        "storage"
    ],

    "content_scripts": [{
        "css": ["style.css"],
        "js": ["content.js"],
        "matches": ["*://*/*"],
        "all_frames": true
    }],

    "web_accessible_resources": [
        "frame.html"
    ],

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}